// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int      @id @default(autoincrement())
  username String
  password String
  status   String
  role     String
  tokens   Tokens[]
  Data     Data[]
}

model Tokens {
  id      Int    @id @default(autoincrement())
  user_id Int
  token   String
  user    Users  @relation(fields: [user_id], references: [id])
}

model Data {
  id          Int      @id @default(autoincrement())
  user_id     Int
  slot        Int
  nick        String
  status      String
  world       String
  uptime      String
  last_update DateTime
  bot_info    String
  user        Users    @relation(fields: [user_id], references: [id])
}
